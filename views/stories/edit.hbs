<h4>Edit Story</h4>
<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select story.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <h5><label for="body">Tell us your story:</label></h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <input type="submit" value="Save" class="btn">
                <a href="/dashboard" class="btn red">Cancel</a>
            </div>
        </div>
    </form>
</div>